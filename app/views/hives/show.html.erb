<% provide(:title, current_user.name) %>
<p id="notice"><%= notice %></p>
<p class = "gravatar">
<%= gravatar_for @hive %>
</p>
<aside class = "aside"><p>
  <b>Name:</b>
  <%= @hive.name %>
</p>

<p>
  <b>email:</b>
  <%= @hive.email %>
</p>
<%= render 'shared/stats' %>
</aside>
<section id="aside">
<%= render 'follow_form' if sign_in? %>
<% if @hive.microposts.any? %>
	<h3>Microposts (<%= @hive.microposts.count %>)</h3>
	<ol class= "microposts">
	<%= render @microposts %>
	</ol>
	<%= will_paginate @microposts %>
	<% end %>
	

</section>


